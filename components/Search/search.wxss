/* components/Search/search.wxss */

.search-float {
    width: 100%;
    height: 60rpx;
    margin: auto;
    background: #f1f1f1;
    border-radius:60rpx;
    margin-top: 19rpx;
}

.search-top {
    width:100%;
    height: 100%;
    display: flex;
    display: -webkit-flex;
    justify-content: flex-start;
    align-items: center;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 36rpx;
    padding:0 30rpx;
}

.search-icon {
    margin-right: 16rpx;
    width: 28rpx;
    height: 28rpx;
}

.search-text {
    font-size: 28rpx;
    color: #000;
}

