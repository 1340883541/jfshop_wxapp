/* 充值弹框 */
.modelChonz{
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background:#000;
    opacity:0.04;
}
.modelInfo{
    width: 90%;
    height: 50vh;
    
}

/* 弹框 */
.modelHidden{
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.4);
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1;
}
.modeCont{
    width: 100%;
    height: 460rpx;
    position: absolute;
    top: calc((100vh - 630rpx)/2);
    left: 0;
    z-index: 100;
}
.modecont-box{
    width: 592rpx;
    height: 100%;
    border-radius: 20rpx;
    background: #fff;
    margin: auto;
    position: relative;
}
.mode-top{
    width: 100%;
    height: 360rpx;
    border-bottom: 1rpx solid #eee;
    padding-top: 80rpx;
    padding-left:50rpx;
    padding-right:50rpx;
}
.mode-tit1{
    font-size: 32rpx;
    color: #000;
    text-align: center;
    font-weight: 500;
    margin-bottom: 50rpx;
}
.tit1-p{
    display: flex;
    display: -webkit-flex;
}
.tit1-label{
    width: 170rpx;
    line-height: 80rpx;
}
.tit1-info{
    flex: 1;
}
.tit1-info input{
    width: 76%;
    height: 80rpx;
    border:1px solid #eee;
    float: left;
    text-align:left;
    padding-left:14rpx;
}
.tit1-info text{
    width: 24%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    float: left;
}
.tit1-info input.disabled{
    border: 0;
    background: #eee;
}

.mode-bottom{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    /* color: #57bf38; */
}
.mode-bottom .chongz-btn, .mode-bottom .quxiao-btn{
    width: 50%;
    height: 100%;
    float: left;
    border: 0;
    background: transparent;
    border-radius: 0;
}
.mode-bottom .chongz-btn{
    color: #a88c5d;
    border-right: 1rpx solid #eee;
}