/* jifen lists */
.jif-top{
    position: relative;
    height: 273rpx;
    background-color: #000;
    overflow: hidden;
}
.jif-top .curr-jif{
    height: 24rpx;
    line-height: 24rpx;
    font-size: 24rpx;
    color:#fff;
    margin-top: 48rpx;
    margin-bottom: 25rpx;   
    text-align: center;
}
.jif-top .jif-recharge{
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color:#F5BD36;
    border:1px solid #A47233;
    width:150rpx;
    margin:auto;
}
.jif-top .jif-num{
    font-size: 72rpx;
    font-weight: bold;
    margin-bottom: 35rpx;   
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    color:#fff;
}
.jif-top .jif-num text{
    font-size: 30rpx;
}
.jif-top .jif-rule{
    position: absolute;
    right:0;
    top:54rpx;
    width:170rpx;
    height: 54rpx;
    line-height:54rpx;
    background-color: rgba(0,0,0,0.7);
    font-size: 24rpx;
    color:#f9e72c;
    border-top-left-radius:27rpx; 
    border-bottom-left-radius:27rpx; 
}
.jif-top .jif-rule image{
    float: left;
    margin-top: 15rpx;
    width:24rpx;
    height: 24rpx;
    margin-left: 26rpx;
    margin-right: 8rpx;
    vertical-align: middle;
}
.p-public-bottom{
    background-color: #fff;
}
.p-public-bottom .p-public-mx{
    height: 74rpx;
    padding:0 30rpx;
    line-height: 74rpx;
    background-color: #f7f7f7;
    font-size: 24rpx;
    color:#999999;
}
.p-public-lists{
    padding: 0 30rpx 30rpx;
}
.p-public-lists .p-public-list{
    height: 138rpx;
    padding-top: 32rpx;
}
.p-public-lists .p-public-list .p-public-list-top{
    height: 32rpx;
    line-height: 32rpx;
    margin-bottom: 18rpx;
    font-size: 32rpx;
    color:#333;
}
.p-public-lists .p-public-list .p-public-list-bottom{
    font-size: 24rpx;
    color:#999;
    height: 24rpx;
    line-height: 24rpx;
}
