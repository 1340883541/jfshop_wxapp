/* pages/paySuc/paySuc.wxss */
.pay-suc{
    width: 320rpx;
    height: 520rpx;
    padding-top: 200rpx;
    margin: 0 auto;
}
.pay-suc image{
    display: block;
    width: 100%;
    height: 100%;
}
.pay-suc-txt{
    margin-top: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 40rpx;
    padding:0 30rpx;
    color:#333;
}
.pay-suc-txt text{
    color:#ff220b;
}
.pay-suc-btn{
    width: 690rpx;
    margin:100rpx 30rpx 0;
    height: 80rpx;
    color:#fff;
    background-color: #a88c5d;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx;
}