.pay-pop-box{
    position: fixed;
    left:0;
    top:0;
    z-index: -1;
    width: 100%;
    height: 100%;
}
.pay-pop-box.index{
    z-index: 1003;
}
.pay-pop-box .pay-pop-bg{
    width:100%;
    height: 100%;
}
.pay-pop-box.index  .pay-pop-bg{
    background-color: rgba(0,0,0,.4);
}
.pay-pop-box .pay-pop-info{
    position: absolute;
    width:690rpx;
    height: auto;
    bottom:-100%;
    left: 30rpx;
    transition:bottom 0.5s ease;
}
.pay-pop-box .pay-pop-info.bottom{
    bottom:20rpx;
}
.pay-pop-box .pay-way{
    border-radius: 16rpx;
    background-color: #fff;
}
.pay-pop-box .pay-money,.pay-pop-box .pay-wechat,.pay-pop-box .pay-balance{
    height: 126rpx;
    padding:0 40rpx;
    line-height: 126rpx;
    font-size: 36rpx;
    color:#333333;
}
.pay-pop-box .gray{  
    color:#999;
}
.pay-pop-box .pay-money text{
    color:#ff220b;
    float:right;
}
.pay-pop-box .pay-wechat image{
    float: left;
    width:48rpx;
    height: 43rpx;
    margin-right: 18rpx;
    margin-top: 38rpx;
}
.pay-pop-box .pay-balance image{
    float: left;
    width:48rpx;
    height: 46rpx;
    margin-right:0rpx;
    margin-top: 36rpx;
}
.pay-pop-box .pay-money,.pay-pop-box .pay-wechat{
    position: relative;
}
.pay-pop-box .pay-money:after,.pay-pop-box .pay-wechat:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.pay-pop-box .pay-wait{
    height: 114rpx;
    line-height: 114rpx;
    color:#fff;
    font-size: 40rpx;
    background-color: #000;
    text-align: center;
    border-radius: 16rpx;
}
.sup-inte{
    color:#ff220b;
}
.pay-pop-box .gray .sup-inte{
    color:#999;
}

.pay_later{
   height: 114rpx;
    line-height: 114rpx;
    color:#333;
    font-size: 40rpx;
    background-color: #e5e5e5;
    text-align: center;
    border-radius: 16rpx;
    margin-top: 30rpx;
    
}
