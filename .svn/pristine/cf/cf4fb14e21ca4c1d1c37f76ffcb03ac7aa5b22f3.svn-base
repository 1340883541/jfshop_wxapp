.toast-mask{
    position: fixed;
    left:0;
    top:0;
    z-index:1199;
    width: 100%;
    height: 100%;
}
.toast{
    position: fixed;
    left:50%;
    z-index:1200;
    max-width: 60%;
    min-width: 25%;
    min-height: 88rpx;
    line-height: 48rpx;
    font-size: 16px;
    color:#fff; 
    background-color: rgba(0,0,0,0.5);
    text-align: center;
    border-radius: 12rpx;
    padding:20rpx 40rpx;
    opacity: 0; 
    transition: opacity 0.3s ease;
}
.center{
    top:50%;
    transform: translate(-50%,-50%);
}
.bottom{
    transform: translate(-50%,0);
    bottom:100rpx;
}
.top{
    transform: translate(-50%,0);
    top:100rpx;
}
.opacity-1{
    opacity: 1;
}