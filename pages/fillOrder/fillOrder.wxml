        <!-- 多件商品的显示 超过2件商品-->
        <!-- <view class='order-goods-info bor-1px-b' catchtap='skipInventoryFn' wx:if="{{goods &&  goods.length> 2}}">
            <view class='fl order-goods-img'>
                <swiper display-multiple-items="{{goods.length >= '3' ? '3' : goods.length}}">
