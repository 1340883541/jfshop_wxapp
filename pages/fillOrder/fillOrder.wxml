<view class="w-wrap">
    <!-- 商品信息,订单留言 -->
    <form bindsubmit="formSubmit">
    <view class='order-goods'>
        <!-- 多件商品的显示 2件商品-->
        <!-- <view class='order-goods-info bor-1px-b' catchtap='skipInventoryFn' wx:if="{{goods &&  goods.length == 2}}">
