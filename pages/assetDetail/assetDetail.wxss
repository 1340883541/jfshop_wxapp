}
.asset_time {
    width:100%;
    height:76rpx;
    display:block;
    overflow:hidden;
}
.asset_time text {
    width:300rpx;
    height:32rpx;
    line-height:33rpx;
    background-color:#d5d5d5;
    border-radius:32rpx;
    text-align:center;
    margin:26rpx auto;
    overflow:hidden;
    font-size:24rpx;
    color:#fff;
    display:block;
}
