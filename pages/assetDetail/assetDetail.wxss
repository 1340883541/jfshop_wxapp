}
.assetdetail_p{
    line-height: 70rpx;
}
.assetdetail_p image{
    width: 100% !important;
}
.font_w{
    font-weight: bold;
}
.jindu{
    width: 100%;
    height:360rpx;
    display: block;
}
.jiaofang_time{
    width: 100%;
    height: 90rpx;
    padding-top: 50rpx;
    color: #d6a841;
