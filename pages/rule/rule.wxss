.rule_top{
    width: 100%;
    height: 342rpx;
    position: relative;
}
.rule_top .rule_banner{
    width: 100%;
    height: 100%;
    display: block;
}
.rule_info{
    width: 82%;
    height: 270rpx;
    margin: auto;
    position:relative;
    margin-top:-270rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}
.rule_info .rule_info_imgbj{
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1;
}
.rule_info_msg{
    width: 100%;
    font-size: 24rpx;
    padding: 7% 7%;
    position:absolute;
    color:#fff;
    top:0;
    z-index:2;
    left:0;
}
.rule_info_msg .rule_p1,
.rule_info_msg .rule_p2,
.rule_info_msg .rule_p3{
    line-height: 60rpx;
}
.rule_mx{
    padding-top: 24rpx;
    padding-bottom: 20rpx;
    background: #f5f5f5;
}
.rule_mx .rule_mx_box{
    background: #fff;
    margin: auto;
    width: 84%;
    min-height: calc(100vh - 342rpx - 24rpx - 20rpx);
    border-radius: 8rpx;
    padding: 30rpx 30rpx 40rpx 30rpx;
}
