.pay-suc{
    width: 106rpx;
    height: 306rpx;
    padding-top: 200rpx;
    margin: 0 auto;
}
.pay-suc image{
    display: block;
    width: 100%;
    height: 100%;
}
.pay-suc-txt{
    margin-top: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 40rpx;
    padding:0 30rpx;
    color:#333;
}
.pay-suc-txt text{
    color:#ff220b;
}
.pay-suc-btn{
    width:310rpx;
    margin:100rpx auto 0;
    height:80rpx;
    color:#a88c5d;
    background-color:#fff;
    text-align:center;
    line-height:80rpx;
    border-radius:14rpx;
    border:1px solid #d6d5d6;
    font-size:32rpx;
}