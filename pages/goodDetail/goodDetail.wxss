}

/*底部按钮  */
.btn-bottom{
    width: 100%;
    height: auto;
    background: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9999;
    padding-right: 16rpx;
}

.col-btn {
    padding-top: 14rpx;
    width: 138rpx;
    height: 110rpx;
    text-align: center;
    background: #fff;
}

.col-btn-icon1 {
    width: 40rpx;
    height: 36rpx;
}

.col-btn-icon2 {
    width: 45rpx;
    height: 41rpx;
}

.col-btn-text {
    font-size: 23rpx;
    color: #666;
}

.click-btn-box{
    width: calc(100% - 280rpx);
    height: auto;
    padding: 15rpx 0rpx 15rpx 0;
    position: relative;
}

.click-btn-box::after{
    content: '';
    display: block;
    clear: both;
}

.click-btn-cover{
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.6);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
}

.click-btn {
    float: left;
    width: 50%;
    height: auto;
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
}

.add-cart {
    background: #484848;
    color: #fff;
    border-top-left-radius: 80rpx;
    border-bottom-left-radius: 80rpx;
}
.add-cart-tag{
   background: #ccc;
    color: #fff;
    border-top-left-radius: 80rpx;
    border-bottom-left-radius: 80rpx;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;

}

.now-buy {
    background: #a88c5d;
    color: #fff;
    border-top-right-radius: 80rpx;
    border-bottom-right-radius: 80rpx;
    border-top-left-radius:10rpx;
    border-bottom-left-radius: 10rpx;
}

.col-icon-t {
    position: relative;
    display: inline-block;
}

.cart-count {
    position: absolute;
    top: -12rpx;
    right: -22rpx;
    z-index: 10;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 180rpx;
    background: #ff220b;
    color: #fff;
    font-size: 18rpx;
    text-align: center;
}

.add-goods-one{
    width: 30rpx;
    height: auto;
    color: #ffffff;
    font-size: 18rpx;
    text-align: center;
    line-height: 30rpx;
    background: rgba(255, 34, 11, 1);
    border-radius: 50%;
    position: absolute;
    top: -12rpx;
    right: -22rpx;
    z-index: 9;
}

.add-goods-one-move{
    transition: all 0.4s;
    top: -70rpx;
    background: rgba(255, 34, 11, 0.8);
}

/*点击图片放大css效果  */

.big-pic {
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.4);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

/* 商品失效 */
.goods-lost-cover{
    width: 100%;
    height: calc(100vh - 110rpx);
    background: rgba(255, 255, 255, 0.3);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.goods-lost-txt{
    width: 100%;
    height: auto;
    color: #ffffff;
    font-size: 32rpx;
    text-align: center;
    line-height: 110rpx;
    background: rgba(51, 51, 51, 0.7);
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 9;
}


