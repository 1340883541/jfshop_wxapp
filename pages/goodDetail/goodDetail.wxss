/*规格css  */
.scale{
    width: 100%;
    height: auto;
    padding: 0 30rpx;
}

.selected-scale {
    width: 100%;
    height: 116rpx;
}

.has-scale-text {
    color: #333333;
    font-size: 32rpx;
}

.scale-dot {
    width: 26rpx;
    height: 15rpx;
}

.scale-detail-box{
    width: 100%;
    height: auto;
    padding-bottom: 30rpx;
    border-top: 1px solid #EEEEEE;
}

.scale-list{
    width: 100%;
    height: auto;
    overflow: hidden;
}

.scale-list::after{
    content: '';
    display: block;
    clear: both;
}

.scale-list .scale-list-txt{
    float: left;
    color: #999999;
    font-size: 26rpx;
    margin-top: 28rpx;
    line-height: 60rpx;
}

.scale-list .scale-list-btn{
    float: left;
    color: #333333;
    font-size: 26rpx;
    margin-top: 28rpx;
    margin-left: 30rpx;
    line-height: 60rpx;
    background: #F5F5F5;
    border-radius: 60rpx;
    position: relative;
}

/* .scale-list-btn:nth-of-type(3n+1){
    margin-left: 76rpx;
} */
.scale-list-btn:first-child{
    margin-left: 30rpx !important;
}
.scale-list .scale-list-btn view{
    padding: 0 26rpx;
}

.active-scale-list-btn{
    color: #ffffff !important;
    background: #a88c5d !important;
}

.cover-scale-list-btn::before{
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 60rpx;
    background: rgba(255, 255, 255, 0.6);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
}

.scale-list-num{
    float: left;
    margin-top: 30rpx;
    margin-left: 30rpx;
    background: #F9F9F9;
}

.scale-list-num::after{
    content: '';
    display: block;
    clear: both;
}

.scale-list-num view, .scale-list-num .list-num-num{
    float: left;
    width: 60rpx;
    height: 60rpx;
    font-size: 35rpx;
    text-align: center;
    line-height: 60rpx;
}

.scale-list-num .list-num-unclick{
    color: #CBCBCB !important;
}

.scale-list-num .list-num-click{
    color: #666666;
}

.scale-list-surplus{
    float: right;
    color: #999999;
    font-size: 26rpx;
    margin-top: 28rpx;
    line-height: 60rpx;
}

.scale-list-surplus text{
    color: #333333;
}

/*评价css  */
.comment-top {
    padding: 0 30rpx;
    height: 92rpx;
}

.comment-top-text {
    color: #333333;
    font-size: 32rpx;
}

.comment-per {
    color: #999999;
    font-size: 28rpx;
}

.comment-pic-top {
    margin-bottom: 24rpx;
