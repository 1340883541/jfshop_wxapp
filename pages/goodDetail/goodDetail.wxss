/* ---------------------- */
.comment-swiper{
    width: 100%;
    height: auto;
    overflow-x: scroll;
    overflow-y: hidden;
    padding-left: 30rpx;
    margin-bottom: 28rpx;
}

.comment-swiper-i{
    width: 100%;
    height: auto;
}

.comment-swiper-i::after{
    content: '';
    display: block;
    clear: both;
}

.comment-swiper-i image{
    display: block;
    float: left;
    width: 222rpx;
    height: 222rpx;
    margin-left: 12rpx;
}

.comment-swiper-i image:first-child{
    margin-left: 0;
}
